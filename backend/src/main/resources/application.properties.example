# Database Configuration
spring.datasource.url=jdbc:mysql://localhost:3306/sneaker_store?createDatabaseIfNotExist=true
spring.datasource.username=root
spring.datasource.password=YOUR_DATABASE_PASSWORD_HERE
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# JPA Configuration
spring.jpa.hibernate.ddl-auto=none
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.open-in-view=true
spring.jpa.properties.hibernate.enable_lazy_load_no_trans=true

# Server Configuration
server.port=8080

# JWT Configuration
jwt.secret=YOUR_SECRET_KEY_HERE_CHANGE_THIS_IN_PRODUCTION
jwt.expiration=86400000

# File Upload Configuration
spring.servlet.multipart.enabled=true
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=10MB
upload.path=uploads/
